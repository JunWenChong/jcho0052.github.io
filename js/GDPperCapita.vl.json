{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Gross Domestic Product per Capita of the World in Year 2020",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/JunWenChong/FIT3143Assignment2/main/worldmap.topojson",
    "format": {"type": "topojson", "feature": "worldmap"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/JunWenChong/FIT3143Assignment2/main/gdp-per-capita-worldbank.csv"
        },
        "key": "Entity",
        "fields": ["GDPperCapita"]
      }
    },
    {"calculate": "datum.GDPperCapita", "as": "GDP in $"}
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "GDP in $",
      "type": "quantitative",
      "scale": {"scheme": "yellowgreen"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "GDP in $", "type": "quantitative"}
    ]
  },
  "config": {}
}